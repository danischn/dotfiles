# Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty

input * {
        xkb_layout us
        repeat_delay 150
        repeat_rate 40
        accel_profile flat
        pointer_accel 0.8
        natural_scroll enabled
}

# Hide cursor after 4 seconds of no input
seat * hide_cursor  4000
seat * hide_cursor when-typing enable

output eDP-1 {
  background #696969 solid_color
  scale 1.375
}

default_dim_inactive 0.2

default_border pixel 0

# ----------------------------- Pickers ------------------------------

set $menu tofi-run | xargs swaymsg exec --
bindsym $mod+Return exec $menu

# Application opener
set $drun tofi-drun | xargs swaymsg exec --
bindsym $mod+Space exec $drun

# Clipboard manager
exec wl-paste --watch cliphist store
bindsym $mod+v exec open-cliphist

# PDF opener
bindsym $mod+p exec open-pdf

# Screenshotter
bindsym Print exec printf "area\nfullscreen" | tofi | xargs -I{} grimshot savecopy {}

# ----------------------------- Keybinds ------------------------------

# Kill focused window
bindsym $mod+q kill

# Move your focus around
bindsym $mod+$left fullscreen disable; focus left
bindsym $mod+$down fullscreen disable; focus down
bindsym $mod+$up fullscreen disable; focus up
bindsym $mod+$right fullscreen disable; focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

set $wterm    "term"
set $wbrowser "browser"
set $wpdf     "pdf"
set $wmisc    "misc"

# Switch to workspace
bindsym $mod+t workspace $wterm
bindsym $mod+b workspace $wbrowser
bindsym $mod+r workspace $wpdf
bindsym $mod+m workspace $wmisc

assign [app_id="firefox"] workspace $wbrowser
assign [app_id="org.pwmt.zathura"] workspace $wpdf

for_window [app_id="nwg-displays"] floating enable
for_window [app_id="yad"] floating enable

# Move focused container to workspace and focus it
bindsym $mod+Shift+t move container to workspace $wterm, workspace $wterm
bindsym $mod+Shift+b move container to workspace $wbrowser, workspace $wbrowser
bindsym $mod+Shift+r move container to workspace $wpdf, workspace $wpdf
bindsym $mod+Shift+m move container to workspace $wmisc, workspace $wmisc

bindsym $mod+w move workspace to output up
bindsym $mod+a move workspace to output left
bindsym $mod+s move workspace to output down
bindsym $mod+d move workspace to output right

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Tab floating toggle

# Resizing containers:
mode "resize" {
    bindsym $left resize shrink width 20px
    bindsym $down resize grow height 20px
    bindsym $up resize shrink height 20px
    bindsym $right resize grow width 20px
    bindsym escape mode "default"
}

# bindsym $mod+r mode "resize"

bar {
  swaybar_command waybar
}

# OSD server
exec swayosd-server
bindsym XF86MonBrightnessUp exec swayosd-client --brightness raise
bindsym XF86MonBrightnessDown exec swayosd-client --brightness lower
bindsym XF86AudioRaiseVolume exec swayosd-client --output-volume 5 --max-volume 120
bindsym XF86AudioLowerVolume exec swayosd-client --output-volume -5 --max-volume 120

include /etc/sway/config.d/*
