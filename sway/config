# Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty

input * {
        xkb_layout us
        xkb_variant "altgr-intl"
        repeat_delay 150
        repeat_rate 40
        accel_profile flat
        pointer_accel 0.8
        natural_scroll enabled
}

# Hide cursor after 4 seconds of no input
seat * hide_cursor  4000
seat * hide_cursor when-typing enable

output * {
  background #E6DED2 solid_color
}

output eDP-1 {
  scale 1.375
}


default_border pixel 1
gaps inner 6

set $clear #ffffff00

client.focused           #000000  #000000     #000000  #000000    #000000ff
client.focused_inactive  #ffffff  #ffffff     #ffffff  #ffffff    $clear
client.unfocused         #333333  #222222     #888888  #292d2e    $clear

# ----------------------------- Pickers ------------------------------
# Application opener
set $drun fuzzel
bindsym $mod+Space exec $drun

bindsym $mod+p exec open-pdf
bindsym $mod+g exec sway_toggle_gpt
bindsym $mod+o exec sway_monitor_cycle

# Screenshotter
bindsym Print exec printf "area\nfullscreen" | tofi | xargs -I{} grimshot savecopy {}

# ----------------------------- Keybinds ------------------------------

# Kill focused window
bindsym $mod+Shift+q kill

# Move your focus around
bindsym $mod+$left fullscreen disable; focus left
bindsym $mod+$down fullscreen disable; focus down
bindsym $mod+$up fullscreen disable; focus up
bindsym $mod+$right fullscreen disable; focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

set $wterm    "1:term"
set $wbrowser "2:web"
set $wpdf     "3:pdf"
set $wmisc    "4:misc"

bindsym $mod+a workspace $wterm
bindsym $mod+s workspace $wbrowser
bindsym $mod+d workspace $wpdf
bindsym $mod+f workspace $wmisc

assign [app_id="firefox"] workspace $wbrowser
assign [app_id="org.pwmt.zathura"] workspace $wpdf
for_window [app_id="nwg-displays"] floating enable
for_window [app_id="yad"] floating enable
for_window [app_id="zen"] move scratchpad

bindsym $mod+Shift+a move container to workspace $wterm, workspace $wterm
bindsym $mod+Shift+s move container to workspace $wbrowser, workspace $wbrowser
bindsym $mod+Shift+d move container to workspace $wpdf, workspace $wpdf
bindsym $mod+Shift+f move container to workspace $wmisc, workspace $wmisc
bindsym $mod+m fullscreen
bindsym $mod+Tab floating toggle

bar {
  swaybar_command waybar
}

# OSD server
exec swayosd-server
bindsym XF86MonBrightnessUp exec swayosd-client --brightness raise
bindsym XF86MonBrightnessDown exec swayosd-client --brightness lower
bindsym XF86AudioRaiseVolume exec swayosd-client --output-volume 5 --max-volume 120
bindsym XF86AudioLowerVolume exec swayosd-client --output-volume -5 --max-volume 120

include /etc/sway/config.d/*
